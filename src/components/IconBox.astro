---
export interface Props {
    symbol: string;
    title: string;
}

const { symbol, title } = Astro.props;
---
<div class="flex flex-col items-center">
  <div class="relative flex justify-center items-center bg-white h-20 w-20 border-black border-[1px]">
    <div class="absolute inset-0 w-full h-full shadow-lg shadow-gray-600 opacity-70"></div>
    <span class="font-work-sans text-7xl font-medium">
      {symbol}
    </span>
  </div>
  <h4 class="font-work-sans text-xl mt-4 blur-sm">{title}</h4>
</div>